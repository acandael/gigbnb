<!DOCTYPE html>
<html>
<head>
  <title>Gigbnb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if member_signed_in? %>
    <%= link_to "Sign out", destroy_member_session_path, method: :delete %>
    <% if current_member.profile != nil %>
      <%= link_to "Profile", member_profile_path(current_member, current_member.profile.id) %>
    <% else %>
      <%= link_to "Profile", new_member_profile_path(current_member) %>
    <% end %>
  <% else %>
  <%= link_to "Sign in", new_member_session_path %>
  <% end %>
  <%= yield %>

</body>
</html>
