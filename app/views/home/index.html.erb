<section class="hero">
  <header class="navigation" role="banner">
    <div class="navigation-wrapper">
      <a href="javascript:void(0)" class="logo">
        Airbnb
      </a>
      <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">Menu</a>
      <nav role="navigation">
        <ul id="js-navigation-menu" class="navigation-menu show">
          <li class="nav-link"><a href="javascript:void(0)">Become a host</a></li>
          <li class="nav-link"><a href="javascript:void(0)">Help</a></li>
          <li class="nav-link"><%= link_to "Sign Up", new_member_registration_path %></li>
          <% if member_signed_in? %>
            <li class="nav-link"><%= link_to "Sign out", destroy_member_session_path, method: :delete %></li>
          <% if has_profile? %>
            <li class="nav-link"><%= link_to "Profile", member_profile_path(current_member, current_member.profile) %></li>
          <% else %>
            <li class="nav-link"><%= link_to "Create Profile", new_member_profile_path(current_member) %></li>
          <% end %>
          <% else %>
            <li class="nav-link"><%= link_to "Sign in", new_member_session_path %></li>
  <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="body">
  <h1>Find a sleeping place</h1>
  </div>
</section>
<section class="search">
  <div class="search-bar">
  Search for a location
  <%= form_tag locations_path, method: :get do %>
    <div class="block">
      <%= label_tag(:start_date, "Check In") %>
      <%= text_field_tag(:start_date, nil, id: "start_date") %>
      <%= label_tag(:end_date, "Check Out") %>
      <%= text_field_tag(:end_date, nil, id: "end_date") %>
    </div>
    <div class="block">
      <%= label_tag(:city, "City") %>
      <%= select_tag(:city, options_for_select(Address.city_names),
      prompt: "Select City")%>
      <%= label_tag(:region, "State/Province") %>
      <%= select_tag(:region, options_for_select(Address.region_names),
      prompt: "Select State/Region") %>
    </div>
    <div class="block">
      <%= submit_tag "Search For Location" %>
    </div>
  <% end %>
  </div>
</section>
<section class="row">
  <h2>Locations</h2>
  <p>Our selected locations</p>
  <ul class="locations">
    <li><%= image_tag "new-york.jpg" %></li>
    <li><%= image_tag "new-york.jpg" %></li>
    <li><%= image_tag "new-york.jpg" %></li>
    <li><%= image_tag "new-york.jpg" %></li>
  </ul>
  <div class="all-items"><%= link_to 'See all Locations', locations_path %></div>
</section>

<script>
$("#start_date").pickadate({format: 'yyyy-mm-dd'});
$("#end_date").pickadate({format: 'yyyy-mm-dd'});
</script>
