<%= simple_form_for [current_member, location] do |f| %>
  <%= f.input :title, label: "Title" %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :address, label: "Address" %>
  <%= f.input :city, label: "City" %>
  <%= f.input :postal_code, label: "Postal code" %>
  <%= f.input :state, label: "State" %>
  <%= f.input :country, label: "Country" %>
  <%= f.input :beds, label: "Number of beds" %>
  <%= f.input :guests, label: "Number of guests" %>
  <%= f.input :price, label: "Price" %>
  <%= f.button :submit %>
<% end %>
