<h1>Location: <%= @location.title %></h1>
<%= simple_format(@location.description) %>
<%= simple_format(@location.address) %>
<%= @location.city %>
<%= @location.postal_code %>
<%= @location.state %>
<%= @location.country_name(@location.country) %>
number of beds: <%= @location.beds %>
number of guests: <%= @location.guests %>
price: <%= number_to_currency(@location.price) %>
<%= link_to "Edit", edit_member_location_path(current_member, @location) %>
<%= link_to "Delete", member_location_path(current_member, @location), method: :delete, data: { confirm: "Are you sure?" } %>
