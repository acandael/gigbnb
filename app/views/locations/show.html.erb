<section class="content">
<h1>Location: <%= @location.title %></h1>
<%= simple_format(@location.description) %>
<p>Address: <%= @location.address %>
<%= @location.city %><br>
<%= @location.postal_code %>
<%= @location.state %><br> 
<%= @location.country_name(@location.country) %></p>
<p>number of beds: <%= @location.beds %><br>
number of guests: <%= @location.guests %></p>
<p>price: <%= number_to_currency(@location.price) %></p>
<p>
<%= link_to "Edit", edit_member_location_path(current_member, @location) %>
<%= link_to "Delete", member_location_path(current_member, @location), method: :delete, data: { confirm: "Are you sure?" } %>
</p>
<% @location.location_images.each do |image| %>
  <%= image_tag image.picture_file_name.url %>
<% end %>
</section>

